{
  "name": "ol-api/ol-api",
  "description": "Transform WordPress into a configurable REST API without touching code",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Your Name",
      "email": "your.email@example.com"
    }
  ],
  "require": {
    "php": ">=8.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5 || ^10.0",
    "phpstan/phpstan": "^1.10",
    "squizlabs/php_codesniffer": "^3.7",
    "wp-coding-standards/wpcs": "^3.0",
    "phpcompatibility/php-compatibility": "^9.3",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7",
    "vimeo/psalm": "^5.0"
  },
  "autoload": {
    "psr-4": {
      "OL_API\\": "includes/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "OL_API\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "test:coverage": "phpunit --coverage-html=coverage/html --coverage-clover=coverage/clover.xml",
    "phpstan": "phpstan analyse --level=7",
    "phpcs": "phpcs --standard=WordPress .",
    "phpcs:fix": "phpcbf --standard=WordPress .",
    "psalm": "psalm",
    "quality": [
      "@phpstan",
      "@phpcs",
      "@psalm"
    ],
    "dev": [
      "@test",
      "@quality"
    ]
  },
  "minimum-stability": "beta",
  "prefer-stable": true
}
